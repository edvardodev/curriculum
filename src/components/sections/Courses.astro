---
import Section from "../Section.astro"
import { courses } from "@cv"
---

<Section title="Cursos">
  <ul class="flex flex-col gap-4 mb-4">
    {
      courses.map(({ platform, summary, typePlatform }) => {
        return (
        <li>
            <article>
              <header class="flex">
                <div>
                  <h3 class="font-bold mt-2 text-gray-500 text-xl">{platform}</h3>
                  <p class="font-semibold text-gray-400 text-base">{typePlatform}</p>
                </div>
              </header>
              <footer>
                <p class="text-sm mt-2">{summary}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul">
</Section>
