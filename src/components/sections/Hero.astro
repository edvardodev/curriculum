---
import { basics } from "@cv";
import Section from "@/components/Section.astro";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import GitHub from "@/icons/GitHub.astro";
import type { SocialIcon } from "@/types";

const {
  name,
  label,
  image,
  profiles,
  phone,
  email,
} = basics;

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn
};
---

<Section>
  <div class="flex flex-col-reverse lg:flex-row items-center justify-between gap-4">
    <div class="flex flex-col pr-8 items-center lg:items-start">
      <h1 class="flex font-bold text-3xl text-center">{name}</h1>
      <h2
        class="font-semibold text-gray-400 text-balance text-lg"
      >
        {label}
      </h2>
      <footer class="text-gray-500 flex gap-3 mt-1">
        {
          email && (
            <a
              class="mt-1 text-gray-400 inline-flex items-center justify-center border-[1px] border-solid border-gray-100 p-1 w-8 h-8 rounded-md hover:bg-gray-200	hover:border-[1px] hover:border-solid hover:border-gray-100"
              href={`mailto:${email}`}
              title={`Enviar un correo a ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              class="mt-1 text-gray-400 inline-flex items-center justify-center border-[1px] border-solid border-gray-100 p-1 w-8 h-8 rounded-md hover:bg-gray-200	hover:border-[1px] hover:border-solid hover:border-gray-100"
              href={`tel:${phone}`}
              title={`ComunÃ­cate al ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, url }) => {
            const Icon = SOCIAL_ICONS[network];

            return (
              <a
                class="mt-1 text-gray-400 inline-flex items-center justify-center border-[1px] border-solid border-gray-100 p-1 w-8 h-8 rounded-md hover:bg-gray-200	hover:border-[1px] hover:border-solid hover:border-gray-100"
                href={url}
                title={`Visita mi ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <img
        class="aspect-square object-cover w-48 lg:w-32 rounded-full"
        src={image}
        alt={`Foto de perfil de ${name}`}
      />
    </figure>
  </div>
</Section>

<style>
  footer a {
    transition: all 0.3s ease;
  }
</style>
