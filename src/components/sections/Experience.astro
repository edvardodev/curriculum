---
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Experiencia laboral">
  <ul class="relative border-s border-gray-200">
    {
      work.map(({ name, startDate, endDate, position, summary, url }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual";

        return (
          <li class="mb-5 ms-4">
            <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white" />
            <h3 class="font-semibold text-gray-400 text-base mt-5 font-sans">
              {position} en <a href={url} target="_blank" rel="noopener noreferrer">{name}</a>
            </h3>
            <time
              class="text-gray-400 min-w-25 cursor-default text-xs"
              datetime={startDate}
              data-title={startDate}
            >
              {startYear}
            </time>
            {" - "}
            <time
              class="text-gray-400 min-w-25 cursor-default text-xs"
              datetime={endDate}
              data-title={endDate}
            >
              {endYear}
            </time>
            <p class="text-sm mt-2">{summary}</p>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: 0.75rem;
    position: absolute;
    padding: 0.2rem 0.5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
